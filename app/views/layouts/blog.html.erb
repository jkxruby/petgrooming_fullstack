<!DOCTYPE html>
<html>
    <head>
        <title>Pet-Grooming
        </title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <link rel="shortcut icon" href="/images/favicon.ico">
    </head>

    <body>

        <div class="container-fluid">
            <%= render "common/navbar" %>
            <%= render "common/flashes" %>
            <div class="location">
                <div class="locationcontent">
                    <p>
                        Pets Grooming
                    </p>
                </div>
            </div>

            <div class="blog">
                <div class="blogcontent">
                    <%= yield %>
                </div>
                <div class="blogsidebar bg-color1">
                    <h3 class="text-center">
                        <span class="fa fa-caret-right" style="font-size:14px; color:#f7aa45;"></span>
                        <%= link_to("All Topics", blogs_path, :style => 'color:#fff; font-size:18px; text-decoration:none;') %>
                    </p>
                </h3>

                <p class="text-center">
                    <% Topic.all.each do |topic| %>

                    <span class="fa fa-caret-right" style="font-size:14px; color:#f7aa45;"></span>
                    <%= link_to topic.name, blogs_path(topic: topic.name), :style => 'color:#fff; font-size:14px; text-decoration:none;' %>
                    <br>
                    <% end %>
                </p>

            </p>
        </div>
    </div>
</div>

<div class="container-fluid">
    <%= render "common/footer" %>

</div>
</body>
</html>
