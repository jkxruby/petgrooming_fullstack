<div class="row blog">
    <div class="col-sm-8 blogindex">
        <% @blogs.each do |blog| %>
      	     <h2><%= link_to(blog.title, blog_path(blog), class: "blogtitle") %></h2><br>
             <span>Post at <%=time_tag( blog.created_at )%></span><br>
                <% if blog.image.present? %>
                    <%= image_tag(blog.image.url) %>
                <% end %><br>       
            <p><%= blog.sketch %></p>
        <% end %>
    </div>
    <div class="sidebar col-md-2">
        <h2>Categories</h2>
    </div>

</div>